class Solution:
    def LeftView(self, root):
        if not root:
            return []
        q = [(root, 0)]
        ans, seen = [], set()
        while q:
            node, level = q.pop(0)
            if level not in seen:
                ans.append(node.data)
                seen.add(level)
            if node.left: q.append((node.left, level+1))
            if node.right: q.append((node.right, level+1))
        return ans
