class Solution:
    def diameter(self, root):
        self.dia = 0

        def dfs(node):
            if not node:
                return 0
            lh = dfs(node.left)
            rh = dfs(node.right)
            self.dia = max(self.dia, lh + rh + 1)
            return 1 + max(lh, rh)

        dfs(root)
        return self.dia
